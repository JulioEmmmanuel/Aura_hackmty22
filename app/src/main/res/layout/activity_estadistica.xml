<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estadistica"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_layout"
    android:paddingRight="@dimen/padding_layout"
    android:paddingTop="@dimen/padding_layout">

    <TextView
        android:id="@+id/textDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emoDia"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="37dp"
        android:textSize="@dimen/textSize"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        app:srcCompat="@drawable/gf3"
        android:layout_marginTop="@dimen/margin_t_text" />

    <TextView
        android:id="@+id/textSemana"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/margin_t_text"
        android:text="@string/emoSemana"
        android:textSize="@dimen/textSize"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="37dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:srcCompat="@drawable/gf2"
        android:layout_marginTop="@dimen/margin_t_text" />
    />

    <TextView
        android:id="@+id/textProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/porgreso"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="37dp"
        android:textSize="@dimen/textSize"
        android:layout_marginTop="@dimen/margin_t_text" />

    />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:srcCompat="@drawable/gf1removebg"
        android:layout_marginTop="@dimen/margin_t_text" />
    />
</LinearLayout>
</ScrollView>